public class sample {
    public static void main(String[]args){
        String a=" chota Bheeam";
        String reverse="";
        for(int i=a.length()-1; i>=0; i--){
            reverse +=a.CharAt(i);
        }
            System.out.println("orginal woed:"+a);
            System.out.println("reverse word:"+reverse);
        }
        
    }
